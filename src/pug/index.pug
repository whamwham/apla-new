include includes/common.pug
include includes/data.pug

-
    var currPage = {
        htmlAttrs: $i18n.htmlAttrs,
        navIsWhite: false
    };
    htmlAttrs = currPage.htmlAttrs;


include includes/head
body(class=$i18n.lang)
    include includes/header
    app-home
        .screen-main
            .container
                h1!= $i18n.MAIN.SHOWREEL.TITLE
                h4!= $i18n.MAIN.SHOWREEL.TEXT

        //.video-section
            .video-wrapper
                video-js#singleVideo(preload='no' crossorigin='' controls=true poster='/assets/images/video-bkg.svg' data-setup='{"fluid": true }')
                    source(src='/assets/intro.mp4')


        .screen-6
            .container
                h2!= $i18n.MAIN.ADVANTAGE.TITLE
                .img
                    img.lazy(data-src='/assets/images/devices-3.png' alt='')
                section
                    .item
                        img.icon(src='/assets/icons/icon-lock.svg')
                        h4!= $i18n.MAIN.ADVANTAGE[1].TITLE
                        p!= $i18n.MAIN.ADVANTAGE[1].TEXT
                    .item
                        img.icon(src='/assets/icons/icon-access-rights.svg')
                        h4!= $i18n.MAIN.ADVANTAGE[2].TITLE
                        p!= $i18n.MAIN.ADVANTAGE[2].TEXT
                    .item
                        img.icon(src='/assets/icons/icon-rad.svg')
                        h4!= $i18n.MAIN.ADVANTAGE[3].TITLE
                        p!= $i18n.MAIN.ADVANTAGE[3].TEXT
                    .item
                        img.icon(src='/assets/icons/icon-lightning.svg')
                        h4!= $i18n.MAIN.ADVANTAGE[4].TITLE
                        p!= $i18n.MAIN.ADVANTAGE[4].TEXT
                    .item
                        img.icon(src='/assets/icons/icon-user-friendly.svg')
                        h4!= $i18n.MAIN.ADVANTAGE[5].TITLE
                        p!= $i18n.MAIN.ADVANTAGE[5].TEXT
                    .item
                        img.icon(src='/assets/icons/icon-own-blockchain.svg')
                        h4!= $i18n.MAIN.ADVANTAGE[6].TITLE
                        p!= $i18n.MAIN.ADVANTAGE[6].TEXT


        .screen-blockchain
            .container
                h2!= $i18n.MAIN.BLOCKCHAIN.TITLE
                img.main(src="/assets/images/scheme_3.png")
                section
                    h4 Blockchain is the Inevitable Technology Infrastructure of the near future, embrace it!
                    ul
                        li Secure business & application network
                        li Transparency of activities for all stakeholders
                        li Immutability and Finality of data recorded to the blockchain
                        li Automation of activities and operations using Smart Contracts
                        li Machine to Machine Infrastructure
                //section
                    article
                        span
                        h4!= $i18n.MAIN.BLOCKCHAIN[1].TITLE
                        p!= $i18n.MAIN.BLOCKCHAIN[1].TEXT
                    article
                        span
                        h4!= $i18n.MAIN.BLOCKCHAIN[2].TITLE
                        p!= $i18n.MAIN.BLOCKCHAIN[2].TEXT
                    article
                        span
                        h4!= $i18n.MAIN.BLOCKCHAIN[3].TITLE
                        p!= $i18n.MAIN.BLOCKCHAIN[3].TEXT
        //.screen-clients
            .container
                h2!= $i18n.MAIN.CLIENTS.TITLE
                section

                    //h3 Governments
                    each item in $i18n.CLIENTS.GOV
                        +clients-gov-list-item(item)
                    //div
                        h3 Businesses
                        each item in $i18n.CLIENTS.BUSINESS
                            +clients-business-list-item(item)
        #screen4.screen-4
            #container4.container
                h2!= $i18n.MAIN.FULLSERVICE.TITLE
                p!= $i18n.MAIN.FULLSERVICE.TEXT
                .sheme
                    div
                        article.step.step-1
                            h4!= $i18n.MAIN.FULLSERVICE[1].TITLE
                            p!= $i18n.MAIN.FULLSERVICE[1].TEXT
                        article.step.step-2
                            h4!= $i18n.MAIN.FULLSERVICE[2].TITLE
                            p!= $i18n.MAIN.FULLSERVICE[2].TEXT
                        article.step.step-3
                            h4!= $i18n.MAIN.FULLSERVICE[3].TITLE
                            p!= $i18n.MAIN.FULLSERVICE[3].TEXT
                    span
                        img.step-0(src='/assets/apla.svg')
                        img.step-1(src='/assets/images/b-w-1.svg')
                        img.step-2(src='/assets/images/b-w-2.svg')
                        img.step-3(src='/assets/images/b-w-3.svg')
                        img.step-4(src='/assets/images/b-w-4.svg')
                        img.step-5(src='/assets/images/b-w-5.svg')
                        img.step-6(src='/assets/images/b-w-6.svg')
                    div
                        article.step.step-4
                            h4!= $i18n.MAIN.FULLSERVICE[4].TITLE
                            p!= $i18n.MAIN.FULLSERVICE[4].TEXT
                        article.step.step-5
                            h4!= $i18n.MAIN.FULLSERVICE[5].TITLE
                            p!= $i18n.MAIN.FULLSERVICE[5].TEXT
                        article.step.step-6
                            h4!= $i18n.MAIN.FULLSERVICE[6].TITLE
                            p!= $i18n.MAIN.FULLSERVICE[6].TEXT
        .screen-5
            .container
                article(href='/government')
                    small!= $i18n.MAIN.APLAFOR.SUBHEAD
                    h3
                        a(href='/government')
                            != $i18n.MAIN.APLAFOR[1].TITLE
                            span.arrow.arrow-right
                                em
                    p!= $i18n.MAIN.APLAFOR[1].TEXT
                article(href='/business')
                    small!= $i18n.MAIN.APLAFOR.SUBHEAD
                    h3
                        a(href='/business')
                            != $i18n.MAIN.APLAFOR[2].TITLE
                            span.arrow.arrow-right
                                em
                    p!= $i18n.MAIN.APLAFOR[2].TEXT

        .screen-stories
            .container
                h2 Cases
                each item in [$i18n.CASES[0],$i18n.CASES[2],$i18n.CASES[1]]
                    +cases-inline-list-item(item)
                .btn-wrapper
                    a.btn(href='/cases')!= $i18n.READMORECASES
        .screen-8.lazy(data-src="/assets/images/partner-screen.jpg")
            .container
                h2!= $i18n.MAIN.ENTERPRISE.TITLE
                p!= $i18n.MAIN.ENTERPRISE.TEXT
                button.btn.openpopupform Become a partner
        .screen-9
            .container
                h2 What our clients say?
                .swiper-container.clients-say
                    .swiper-wrapper
                        article.swiper-slide
                            .thumb.mask.mask-white
                                img(src='/assets/images/clients/niyi.jpg' alt='')
                            div
                                h4 Niyi Ayoola-Daniels
                                small
                                    | President
                                    br
                                    |  International Institute for Petroleum, Energy Law and Policy, Nigeria
                                p
                                    | As a solution designed specifically for government, Apla offers unparalleled scalability and strategic implementation across different verticals. Identifying key government sectors and focusing on high-impact areas like education, the Apla team brings to the table an understanding of economic opportunities that blockchain adoption can unlock globally.
                        article.swiper-slide
                            .thumb.mask.mask-white
                                img(src='/assets/images/clients/wangila.jpg' alt='')
                            div
                                h4 Dr. Fernando Wangila
                                small
                                    | Deputy Director (Head of ICT and Innovation)
                                    br
                                    |  National Transport and Safety Authority, Kenya
                                p
                                    | Apla is a unique platform with rapid application development capabilities that allow organizations to adopt blockchain in record time. What&apos;s interesting is the transition from government applications to a government ecosystem model.
                    .swiper-pagination
                    button.swiper-button-prev(type='button')
                        span.arrow.arrow-left.arrow-lg
                            em
                    button.swiper-button-next(type='button')
                        span.arrow.arrow-right.arrow-lg
                            em
        //.screen-team
            .container
                h2 Top-management
                +team-list('TOPMANAGMENT')
                h2 Advisory board
                +team-list('ADVISORS')
        .screen-news
            .container
                h2 Latest news
                section
                    each item in $i18n.NEWS
                        +main-news-item(item)
        include includes/banner
        include includes/newsletter

        include includes/popupform
        include includes/footer

















